@model HRMs.Models.Position

@{
    ViewBag.Title = "Delete Position";
}

<h2>Delete Position</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3>Are you sure you want to delete this position?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Position Name</dt>
        <dd>@Html.DisplayFor(model => model.PositionName)</dd>

        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>

        <dt>Basic Salary</dt>
        <dd>@Html.DisplayFor(model => model.BasicSalary)</dd>

        <dt>Number of Employees</dt>
        <dd>@Html.DisplayFor(model => model.EmployeeCount)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.EmployeeCount > 0)
            {
                <p class="text-danger">Cannot delete this position as it has employees assigned to it.</p>
            }
            else
            {
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>